<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/edit_buttons_container"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#305070"
            android:padding="10dp">

            <TextView
                android:id="@+id/tabs_titles"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_centerInParent="true"
                android:text="O festiwalu"
                android:textColor="#fff"
                android:textSize="20sp" />


            <ImageButton
                android:id="@+id/hamburger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/ic_hamburger_white_24dp" />

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/login_background"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="30dp"
                    android:fontFamily="serif"
                    android:text="Chodźmy do Restauracji!"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textSize="35sp" />

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="10dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/forks" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:fontFamily="serif"
                    android:text="Rezerwuj wymarzone stoliki w najlepszych, polskich Restauracjach!"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="50dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:fontFamily="serif"
                    android:text="Przystawka, danie głowne i deser w festiwalowej cenie."
                    android:textAlignment="center"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="300dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:background="#fff"
                    android:gravity="center"
                    android:text="18 - 30 kwietnia"
                    android:textAlignment="center"
                    android:textColor="#1e334a"
                    android:textSize="35sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="300dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="50dp"
                    android:background="#fff"
                    android:gravity="center"
                    android:text="49zł"
                    android:textColor="#426188"
                    android:textSize="35sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:fontFamily="serif"
                    android:gravity="center"
                    android:paddingBottom="10dp"
                    android:paddingTop="50dp"
                    android:text="Zasady festiwalu"
                    android:textColor="#000"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:fontFamily="serif"
                    android:gravity="center"
                    android:text="Weź udział w największym polskim festiwalu restauracyjnym, spędź czas przy stole z bliskimi i znajomymi!" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:columnWidth="100dp"
                    android:gravity="center"
                    android:horizontalSpacing="10dp"
                    android:nestedScrollingEnabled="false"
                    android:numColumns="auto_fit"
                    android:scrollbars="none"
                    android:verticalSpacing="10dp" />

            </LinearLayout>


        </ScrollView>

    </LinearLayout>
</FrameLayout>
